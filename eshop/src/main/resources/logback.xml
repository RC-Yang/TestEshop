<configuration>
    <!-- 註解：定義一個名為 "STDOUT" 的 ConsoleAppender，將日誌輸出到控制台 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- 註解：定義日誌的格式，這裡使用的格式包括時間、日誌等級、記錄器名稱及訊息內容 -->
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %highlight(%-5level) %logger{36} - %highlight(%msg) %n</pattern>
        </encoder>
    </appender>

    <!-- 註解：設置根日誌記錄器的日誌等級為 debug，並將剛剛定義的 appender 參照給它 -->
    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
    
    <!-- 原始 C3P0 的 debug log 輸出，這是C3P0自帶的內部log輸出；如果不想要這種輸出，就用以下寫法來取代 -->
    <logger name="com.mchange.v2" level="WARN"/>
</configuration>
